<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebTournament</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/sidebar.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/css/bootstrap-datepicker.min.css"/>
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/arrow-right-r.css' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="~/css/validation.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css"/>
    <!-- Or for RTL support -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.rtl.min.css"/>
    <link rel="stylesheet" href="https://unpkg.com/css.gg@2.0.0/icons/css/arrow-right-r.css"/>
    <link href="~/css/jquery.bracket.min.css" rel="stylesheet">

</head>
<body id="body-pd">

<header class="header" id="header">
    <div class="header_toggle">
        <i class='bx bx-menu' id="header-toggle"></i>
    </div>
    <div> @ViewData["Title"] </div>
</header>

<div class="l-navbar" id="nav-bar">
    <nav class="nav">
        <div>
            <a class="nav_logo text-decoration-none">
                <i class='bx bxl-sketch nav_logo-icon text-decoration-none'></i> <span class="nav_logo-name">Web Tournament</span>
            </a>
            <div class="nav_list">
                <a asp-controller="Home" asp-action="Index" class="nav_link  text-decoration-none">
                    <i class='bx bxs-data nav_icon'></i> <span class="nav_name">База данных</span>
                </a>
            </div>
            <div class="nav_list">
                <a asp-controller="Tournament" asp-action="Index" class="nav_link  text-decoration-none">
                    <i class='bx bx-trophy'></i> <span class="nav_name">Турниры</span>
                </a>
            </div>
            <div class="nav_list">
                <a asp-controller="AgeGroup" asp-action="Index" class="nav_link  text-decoration-none">
                    <i class='bx bx-male-female'></i> <span class="nav_name">Возрастные группы</span>
                </a>
            </div>
            <div class="nav_list">
                <a asp-controller="WeightCategorie" asp-action="Index" class="nav_link  text-decoration-none">
                    <i class='bx bxs-category' ></i> <span class="nav_name">Весовые категории</span>
                </a>
            </div>
            <div class="nav_list">
                <a asp-controller="Belt" asp-action="Index" class="nav_link  text-decoration-none">
                    <i class='bx bx-minus'></i> <span class="nav_name">Пояса</span>
                </a>
            </div>
            <div class="nav_list">
                <a asp-controller="Club" asp-action="Index" class="nav_link  text-decoration-none">
                    <i class='bx bx-building' ></i> <span class="nav_name">Клубы</span>
                </a>
            </div>
            <div class="nav_list">
                <a asp-controller="Trainer" asp-action="Index" class="nav_link  text-decoration-none">
                    <i class='bx bx-male' ></i> <span class="nav_name">Тренера</span>
                </a>
            </div>
        </div>
        <partial name="_LoginPartial"/>
    </nav>
</div>


<div class="container mt-lg-5">
    <main role="main" class="pb-3">
        <a href="#" class="btn" id="menu-toggle">
            <span class="glyphicon glyphicon-menu-hamburger"></span>
        </a>
        @RenderBody()
    </main>
</div>
<div class="d-flex justify-content-center fullscreen-spinner" style="display: none !important;">
    <div class="spinner-border" role="status" style="width: 3rem; height: 3rem;">
        <span class="sr-only"></span>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/jquery.bracket.min.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/sidebar.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.2/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/js/bootstrap-datepicker.min.js"> </script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/locales/bootstrap-datepicker.ru.min.js"></script>

<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>

<script type="text/javascript" src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
<script src="~/js/phoneMask.js" asp-append-version="true"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.8/jquery.mask.min.js" integrity="sha512-hAJgR+pK6+s492clbGlnrRnt2J1CJK6kZ82FZy08tm6XG2Xl/ex9oVZLE6Krz+W+Iv4Gsr8U2mGMdh0ckRH61Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
        $(function () {
            $('a#submit_link').click(function () {
                $('form#submitForm').submit();
            });

        });
    </script>
@await RenderSectionAsync("Scripts", required: false)

</body>

</html>