@using DataAccess.IdentityModels;
 @using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="submitForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
        <a href="#" id="submit_link" class="nav_link active"> <i class='bx bx-grid-alt nav_icon'></i> <span class="nav_name">Выйти</span> </a>
    </form>

}
else
{
    <a asp-area="Identity" asp-page="/Account/Login" class="nav_link active"> <i class='bx bx-grid-alt nav_icon'></i> <span class="nav_name">Войти</span> </a>

}
