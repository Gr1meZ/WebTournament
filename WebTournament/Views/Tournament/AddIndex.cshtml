@model TournamentViewModel

@{
    Layout = null;
}

@using (Html.BeginForm("AddModel", "Tournament", FormMethod.Post, new { enctype = "multipart/form-data", id = "sbmForm" }))
{
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Добавить турнир</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            </button>
            </div>
        <div id="alertMessage" class="alert alert-danger collapse">
            <div id="alertText"></div>
            <div class="text-center"><btn class="btn" id="linkClose">Закрыть</btn></div>
        </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Name">Название</label>
                    <input type="text" class="form-control" placeholder="Введите название турнира" asp-for="Name">
                </div>
            <div class="form-group">
                <label asp-for="StartDate">Дата</label>
                <div class="input-group date" id="datetimepicker">
                    <input type="text" class="form-control" asp-for="StartDate" readonly>
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
                <div class="form-group">
                    <label asp-for="Address">Адрес</label>
                <input type="text" class="form-control" placeholder="Введите адрес" asp-for="Address">
                </div>
                
                </div>
           
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" id="btnSubmit">Сохранить</button>
            </div>
    </div>
}
<script type="text/javascript">

        $("#datetimepicker").datepicker({
            format: 'yyyy.mm.dd',
            language: 'ru',
            "setDate": new Date()
        });

    $('#datetimepicker').datepicker('update', new Date());
    

    $('#linkClose').click(function () {
        $('#alertMessage').hide('fade');
        $("#alertText").empty();

    });

    $('#btnSubmit').click(function (ev) {

        let $btn = $(ev.currentTarget);

        let $form = $('#sbmForm');

        $.ajax({
            url: '/Tournament/AddModel',
            method: 'POST',
            data: $form.serialize(),
            cache: false,
            xhr: function () {
                let xhr = new XMLHttpRequest();
                xhr.onreadystatechange = function () {
                    if (xhr.readyState === 2) {
                        if (xhr.status === 200) {
                            xhr.responseType = "text";
                        }
                    }
                };
                return xhr;
            },
            success: function (data) {
                $("#myModal").modal('hide');
                document.location.reload();
            },
            error: function (data) {
                console.log(data);
                $("#alertText").empty();
                data.responseJSON.forEach(x => {
                    $("#alertText").append(`<div>${x}</div>`);
                    $('#alertMessage').show('fade');
                });
            }
        });
    });
</script>

