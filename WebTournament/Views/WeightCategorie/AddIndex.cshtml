@model WeightCategorieViewModel

@{
    Layout = null;
}

@using (Html.BeginForm("AddModel", "WeightCategorie", FormMethod.Post, new { enctype = "multipart/form-data", id = "sbmForm" }))
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Добавить категорию</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            </button>
        </div>
        <div id="alertMessage" class="alert alert-danger collapse">
            <div id="alertText"></div>
            <div class="text-center"><btn class="btn" id="linkClose">Закрыть</btn></div>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label asp-for="AgeGroupId">Возрастная категория</label>
                <select asp-for="AgeGroupId" name="AgeGroupId" data-placeholder="Выберите категорию..." class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="WeightName">Название весовой категории</label>
                <input type="text" class="form-control" placeholder="Введите категорию" asp-for="WeightName">
            </div>
            <div class="form-group">
                <label asp-for="MaxWeight">Предельный вес</label>
                <input type="number" class="form-control" placeholder="Введите вес" asp-for="MaxWeight">
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            <button type="button" class="btn btn-primary" id="btnSubmit">Сохранить</button>
        </div>
    </div>
}


<script>
    initAjaxAutoCompleteSelect({
        selector: 'select[name="AgeGroupId"]',
        url: '/AgeGroup/Select2AgeGroups',
        dropdownParent: $("#myModal")

    });

      $('#linkClose').click(function () {
        $('#alertMessage').hide('fade');
        $("#alertText").empty();

    });

    $('#btnSubmit').click(function (ev) {

        let $btn = $(ev.currentTarget);
        $btn.prop('disabled', true);
        $btn.text('Generating...');

        let $form = $('#sbmForm');
        console.log($form.serialize())
        $.ajax({
            url: '/WeightCategorie/AddModel',
            method: 'POST',
            data: $form.serialize(),
            cache: false,
            xhr: function () {
                let xhr = new XMLHttpRequest();
                xhr.onreadystatechange = function () {
                    if (xhr.readyState === 2) {
                        if (xhr.status === 200) {
                            xhr.responseType = "text";
                        }

                    }
                };
                return xhr;
            },
            success: function (data) {
                $("#myModal").modal('hide');
                document.location.href = "/WeightCategorie/"
            },
            error: function (data) {
                console.log(data);
                /*  if (data.status === 400) {
                      $('#alertMessage1').show('fade');
                      $btn.prop('disabled', false);
                      $btn.text('Подтвердить');
                  }
                  else {
                      $('#alertMessage').show('fade');
                      $btn.prop('disabled', false);
                      $btn.text('Подтвердить');
                  }
                  */
            }
        });
    });

</script>
